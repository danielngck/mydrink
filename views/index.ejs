   <!-- Flash Message Section -->
 <div id="alert-message" class="alert alert-success" role="alert" style="display: none;"></div>

 <% if (successMessage) { %>
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const alertElement = document.getElementById('alert-message');
      
      // Set the message
      alertElement.innerText = '<%= successMessage %>'; // Ensure this is set correctly
  
      // Show the alert with fade-in effect
      alertElement.style.display = 'block'; // First, set display to block
      alertElement.style.opacity = '0'; // Start with opacity 0
      
      // Use a timeout to allow the display change to take effect
      setTimeout(() => {
          alertElement.style.opacity = '1'; // Fade in to full opacity
      }, 10); // Small delay to allow the browser to register the display change
  
      // Hide the alert after a timeout
      setTimeout(() => {
          alertElement.style.opacity = '0'; // Fade out
          setTimeout(() => {
              alertElement.style.display = 'none'; // Set display to none after fade out
          }, 500); // Match this duration with the CSS transition time
      }, 3000); // Keep the alert visible for 3 seconds
  });
</script>
 <% } %>

