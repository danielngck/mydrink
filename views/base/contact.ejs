<!-- views/page/contact.ejs -->
<!-- contact section start -->
<div class="container-fluid no-gutters">
  <div id="getintouch1" class="contact_section layout_padding">
    <div class="container">
      <div class="row">
        <div class="col-sm-12">
          <h1 class="contact_taital">Get In Touch</h1>
          <div class="bulit_icon"><img src="images/bulit-icon.png" /></div>
        </div>
      </div>
    </div>
    <div class="container-fluid">
      <div class="contact_section_2">
        <div class="row">
          <div class="col-md-12">
            <div class="mail_section_1">
              <form
                id="contactForm"
                action="/customer/addComment"
                method="POST"
              >
                <!-- Form element -->
                <input
                  type="text"
                  class="mail_text"
                  placeholder="Your Name"
                  name="coName"
                  required
                />
                <input
                  type="email"
                  class="mail_text"
                  placeholder="Your Email"
                  name="coEmail"
                  required
                />
                <input
                  type="text"
                  class="mail_text"
                  placeholder="Your Phone"
                  name="coPhone"
                  required
                />
                <textarea
                  class="message-bt"
                  placeholder="Message"
                  rows="5"
                  id="comment"
                  name="coMessage"
                  required
                ></textarea>
                <div class="send_bt">
                  <button type="submit" id="sendMessageButton">SEND</button>
                </div>
                <!-- Submit button -->
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- contact section end -->

<script src="js/script.js"></script>

