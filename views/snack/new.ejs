<%- include('../base/head.ejs') %>
  <title>Create Snack</title>

<style>
  .custom-form {
    max-width: 800px; /* Set a max width for the form */
    margin: left; /* Center the form */
  }
  
  .alert {
    margin-top: 0.5rem; /* Space above alert */
  }

  .alert-custom1 {
    display: flex;
    align-items: center; /* Vertically center the text */
    justify-content: center; /* Horizontally center the text */
    height: 40px; /* Set a specific height */
  }   

  #imagePreview {
    display: block; /* Ensure the image is displayed */
    max-width: 90%; /* Responsive image */
    height: auto; /* Maintain aspect ratio */
    padding: 10px 0px 0px 60px;
  }
  .header {
    display: flex;
    align-items: center;
  }
  
</style>
<body>
  <header><%- include('../base/header.ejs') %></header>
  <div class="container nav-padding">
    <h2>Add New Snack</h2>
    <div class="container mt-3 p-0">
      <form action="./snackCreate" method="POST" class="custom-form">
          <div class="row">
              <div class="col-md-6">
                  <div class="mt-1">
                      <label for="name">Name:</label>
                      <input class="form-control" type="text" id="name" name="name" required>
                  </div>
                  <div class="mt-1">
                      <label for="description">Description:</label>
                      <textarea class="form-control" id="description" name="description" rows="2"></textarea>
                  </div>
                  <div class="mt-1">
                      <label for="price">Price:</label>
                      <input class="form-control" type="number" id="price" name="price" required>
                  </div>
                  <div class="mt-1">
                      <label for="quantity">Quantity:</label>
                      <input class="form-control" type="number" id="quantity" name="quantity">
                  </div>
                  <button type="submit" class="btn btn-primary" style="width: 50%;">Submit</button>
              </div>
              
              <div class="col-md-6" style="padding-left: 30px;"> <!-- Adjusted this column -->
                  <div class="mt-1">
                      <label for="image">Image:</label>
                      <input class="form-control" type="file" id="image" name="image" onchange="previewImage(event)">
                      <div class="alert alert-danger alert-custom1 mb-2" role="alert">
                          <div class="mb-0">Please select an image from your local files.</div>
                      </div>
                  </div>
                  <img id="imagePreview" src="/images/images/defaultSnack.png" alt="Image Preview" class="img-fluid mt-1">
              </div>
          </div>
      </form>
  </div>
</div>


  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
    crossorigin="anonymous"></script>
  <script>
    function previewImage(event) {
      const imagePreview = document.getElementById('imagePreview');
      imagePreview.src = URL.createObjectURL(event.target.files[0]);
      imagePreview.style.display = 'block';
    }
  </script>
</body>

</html>